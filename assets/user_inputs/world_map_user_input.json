{
    "keydown": {
        "UP": {
            "callback": "player.change_movement",
            "args": ["up", true]
        },
        "DOWN": {
            "callback": "player.change_movement",
            "args": ["down", true]
        },
        "RIGHT": {
            "callback": "player.change_movement",
            "args": ["right", true]
        },
        "LEFT": {
            "callback": "player.change_movement",
            "args": ["left", true]
        },
        "SPACEBAR": {
            "callback": "player.interact"
        },
        "ESC": {
            "callback": "game_state.open_menu"
        }
    },
    "keyup": {
        "UP": {
            "callback": "player.change_movement",
            "args": ["up", false]
        },
        "DOWN": {
            "callback": "player.change_movement",
            "args": ["down", false]
        },
        "RIGHT": {
            "callback": "player.change_movement",
            "args": ["right", false]
        },
        "LEFT": {
            "callback": "player.change_movement",
            "args": ["left", false]
        }
    }
}